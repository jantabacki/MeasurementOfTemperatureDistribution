<Window x:Class="Visualisation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visualisation"
        mc:Ignorable="d"
        Title="Visualisation" Height="456" Width="364.737" ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="mainCanvas" HorizontalAlignment="Left" Height="328" Margin="10,25,0,0" VerticalAlignment="Top" Width="328"/>
        <Slider x:Name="mainSlider" HorizontalAlignment="Left" Margin="10,358,0,0" VerticalAlignment="Top" Width="328" SmallChange="1" ValueChanged="MainSlider_ValueChanged" Maximum="0"/>
        <Label x:Name="lblTimestamp" Content="Time stamp" HorizontalAlignment="Left" Margin="10,381,0,0" VerticalAlignment="Top" Width="328"/>
        <Menu HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="364">
            <MenuItem Header="File">
                <MenuItem x:Name="menuItemLoad" Header="Load file" Click="MenuItemLoad_Click">

                </MenuItem>
                <Separator></Separator>
                <MenuItem x:Name="menuItemExit" Header="Exit" Click="MenuItemExit_Click">

                </MenuItem>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Values">
                    <MenuItem x:Name="menuItemShowValues" Header="Show values" Click="MenuItemShowValues_Click">

                    </MenuItem>
                    <MenuItem x:Name="menuItemHideValues" Header="Hide values" Click="MenuItemHideValues_Click">

                    </MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Player">
                <MenuItem x:Name="menuItemPlay" Header="Play" Click="MenuItemPlay_Click">

                </MenuItem>
                <MenuItem x:Name="menuItemReset" Header="Reset" Click="MenuItemReset_Click">

                </MenuItem>
                <MenuItem x:Name="menuItemStop" Header="Stop" Click="MenuItemStop_Click">

                </MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
